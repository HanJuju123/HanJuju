/* pages/home/home.wxss */

.btns-box {
  display: flex;
  justify-content: space-around;
  position: absolute;
  bottom: 50px;
  width: 100%;
  z-index: 999;
}

.btns-box cover-image {
  width: 50px;
  height: 50px;
}

.reChoose {
  position: absolute;
  bottom: 50px;
  left: 50%;
  transform: translateX(-50%);
}

.faceinfo-box {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  height: 350rpx;
  background-color: rgba(255, 255, 255, 0.8);
  border-radius: 5px;
  box-shadow: 0 3px 10px white;
  font-size: 12px;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.row {
  display: flex;
  justify-content: space-around;
}